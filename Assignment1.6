#incremented stars
for i in range(1,6):
    #iterate over the range and prints star one by one until 5 stars are printed in one line
    for j in range(1,i+1):
        print ("*", end=" ")
        
    print()# give a line break
#Decremented stars    
for i in range(4,0,-1):
    #iterate over the range and decrease the numbers from 4 stars untill 1 star is printed
    for j in range(i,0,-1):
        print ("*", end=" ")
    print()# give a line break
    
